@font-face
  font-family 'Century-Gothic-Bold'
  src url('../fonts/Century-Gothic-Bold.woff'), url('../fonts/Century-Gothic-Bold.woff2')
  font-display swap
@font-face
  font-family 'Century-Gothic-Regular'
  src url('../fonts/Century-Gothic-Regular.woff'), url('../fonts/Century-Gothic-Regular.woff2')
  font-display swap

@font-face
  font-family 'Inter-Regular'
  src url('../fonts/Inter-Regular.woff'), url('../fonts/Inter-Regular.woff2')
  font-display swap

@font-face
  font-family 'Roboto-Medium'
  src url('../fonts/Roboto-Medium.woff'), url('../fonts/Roboto-Medium.woff2')
  font-display swap
@font-face
  font-family 'Roboto-Regular'
  src url('../fonts/Roboto-Regular.woff'), url('../fonts/Roboto-Regular.woff2')
  font-display swap

@font-face
  font-family 'TTCommons-Bold'
  src url('../fonts/TTCommons-Bold.woff'), url('../fonts/TTCommons-Bold.woff2')
  font-display swap
@font-face
  font-family 'TTCommons-Medium'
  src url('../fonts/TTCommons-Medium.woff'), url('../fonts/TTCommons-Medium.woff2')
  font-display swap
@font-face
  font-family 'TTCommons-Regular'
  src url('../fonts/TTCommons-Regular.woff'), url('../fonts/TTCommons-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'TTCommons-Regular'
  font-weight 400
  line-height 120%
  color $color-white

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
