.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding-top 10px
    +above($breakpoints.sm)
      padding-top 25px
    +above($breakpoints.md)
      padding-top 30px
    +above($breakpoints.xxl)
      padding-top 34px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 12px
    +above($breakpoints.md)
      gap: 17px
    +above($breakpoints.xxl)
      gap: 22px

  &__logo
    width 74px
    height: auto
    +above($breakpoints.sm)
      width 110px
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 134px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__brand-mobile
    text-align: center
    color: $color-black
    background-color $color-yellow
    padding 7px 0
    +above($breakpoints.sm)
      display: none
