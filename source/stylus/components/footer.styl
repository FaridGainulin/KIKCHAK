.footer
  background-color: #fff

  &__container
    color: #000
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 25px 0 34px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 12px
    +above($breakpoints.md)
      gap: 17px
    +above($breakpoints.xxl)
      gap: 22px

  &__logo
    width 74px
    height: auto
    +above($breakpoints.sm)
      width 110px
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 134px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline
