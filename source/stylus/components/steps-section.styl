.steps-section
  background-color #FFCA00
  position relative

  &__container
    position relative
    z-index 1
    padding 40px 0 20px
    +above($breakpoints.sm)
      padding 70px 0 50px
    +above($breakpoints.md)
      padding 90px 0 70px
    +above($breakpoints.xxl)
      padding 150px 0 116px

  &__title,
  &__sub-title
    color: #000
    text-align: center

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 25px
    +above($breakpoints.md)
      padding 15px 0 30px
    +above($breakpoints.xxl)
      padding 16px 0 37px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      flex-wrap: wrap
      gap: 16px
      height: 305px
    +above($breakpoints.md)
      gap: 20px
      height: 360px
    +above($breakpoints.xxl)
      gap: 24px
      height: 424px

  &__card
    width: 280px !important;
    height: 75px;
    color: #1a1230;
    background-color: #fff;
    display: flex
    align-items: center;
    padding-left: 20px;
    gap: 15px;
    +above($breakpoints.sm)
      width: 355px !important;
      height: 64px;
      padding-left: 20px;
      gap: 15px;
    +above($breakpoints.md)
      width: 473px !important;
      height: 75px;
      padding-left: 25px;
      gap: 20px;
    +above($breakpoints.xxl)
      width 578px !important
      height: 88px
      padding-left 40px
      gap: 24px

  &__card-icon
    flex-shrink: 0
    width 20px
    height: 20px
    border-radius: 50%
    box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.1);
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 18px
      height: 18px
    +above($breakpoints.xxl)
      width 20px
      height: 20px

  &__card-text
    display: flex
    flex-direction: column
    gap: 5px
    +above($breakpoints.sm)
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px

  &__bottom
    width 100%
    position relative
    border: 1px solid #FAE017
    background-color #0E0E0E
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    padding 15px 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start
      gap: 12px
      width 650px
      padding 20px 5px 25px 20px
      margin 30px auto 0
    +above($breakpoints.md)
      gap: 16px;
      width 820px
      padding 25px 5px 35px 25px
      margin 60px auto 0
    +above($breakpoints.xxl)
      gap: 20px
      width 979px
      height: 193px
      padding 32px 5px 42px 30px
      margin 96px auto 0

  &__bottom-img
    position: absolute
    width 85px
    height: auto
    top: 0
    right: 0
    +above($breakpoints.sm)
      width 190px
    +above($breakpoints.md)
      width 235px
    +above($breakpoints.xxl)
      width 289px

  &__bottom-title
    padding 0 50px
    +above($breakpoints.sm)
      padding 0

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 9px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 155px !important
      +above($breakpoints.md)
        width 190px !important
      +above($breakpoints.xxl)
        width 223px !important
    button
      +above($breakpoints.sm)
        width 145px !important
      +above($breakpoints.md)
        width 180px !important
      +above($breakpoints.xxl)
        width 207px !important

  &__img-bg
    position: absolute
    width 100%
    height: auto
    top: 0
    left: 0
    +above($breakpoints.xxxxxxl)
      height: 90px
